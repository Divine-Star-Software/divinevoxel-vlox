{
  "compilerOptions": {
    "target": "esNext",
    "module": "esNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist",
    "baseUrl": "./",
    "types": ["@types/node", "@amodx/threads"],
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  }
}
